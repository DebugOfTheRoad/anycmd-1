@model Anycmd.ViewModel.PageViewModel
<div rel="@Request.RawUrl">
    @{
        if (this.GetUser().IsDeveloper()) {
        <a class="btnTooltip" href="@Url.Action("TooltipEdit", new { pageID = Model.Id })" target="_blank">编辑</a>
        <a class="btnTooltip" href="@Url.Action("TooltipEdit", new { pageID = Model.Id })" onclick="helper.refreshTooltip(this);return false;" iconcls="icon-reload">刷新</a>
        }
    }
    @Html.Raw(Model.Tooltip)
</div>
